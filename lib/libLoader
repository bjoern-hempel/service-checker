# folders to find the friends of bash libs
friendsOfBashLibs=("/opt/friends-of-bash/lib" "$pathRoot/friends-of-bash/lib")
friendsOfBashLib=""

for directory in "${friendsOfBashLibs[@]}"; do
    if [ -d "$directory" ]; then
        friendsOfBashLib="$directory"
        break
    fi
done

# Todo: Try to install friends of bash
if [ "$friendsOfBashLib" == "" ]; then
    echo "no friends of bash library found."
    exit
fi

# include some sources
source "$friendsOfBashLib/all"
source "$pathRoot/lib/functions"
